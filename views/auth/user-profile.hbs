
<div class="card text-center welcome-user">
  <div class="card-body">
 <h1 class="card-title">Welcome {{currentUser.username}}</h1>

<h2 "card-text">Here are your personal habits!</h2>
</div>
</div>

{{#each data.habits}}
  <section>

   Your Habit Tracker::
    <form method="POST" action="/user-profile/{{_id}}/tracker">
      <button class="btn btn-outline-dark">0</button>
    </form>
    
    Update your tracker by clicking on:
    <form method="POST" action="/user-profile/{{_id}}/tracker-update">
      <button class="btn btn-outline-dark">+</button>
    </form>

    <h3>{{this.title}}</h3>
    <p>
      Category:
      {{this.category}}
      <br />
      Goals:
      {{this.goals}}
      <br />
    </p>

    <form method="POST" action="/user-profile/{{_id}}/edit">
      <button class="btn btn-outline-dark">Edit</button>
    </form>

    <form method="POST" action="/user-profile/{{_id}}/delete">
      <button class="btn btn-outline-dark">Delete</button>
    </form>

  </section>
{{/each}}

