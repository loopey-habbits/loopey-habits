<div class="card text-center welcome-user">
  <div class="card-body-welcome">
    <h1 class="card-title welcome-text-color">👐 Welcome
      {{currentUser.username}}
      👐</h1>

    <h3 class="card-text habits-text-color">Track your personal habits!</h3>
  </div>
</div>

{{#if data.habits.length}}

{{#each data.habits}}
  <section>

    <div class="card-template" style="width: 18rem;">
      <img
        class="img-fluid"
        src="../../images/to-do-list-image.jpg"
        class="card-img-top"
        alt="to-do-list-img"
      />
      <div class="card-body-title">
        <h5 class="card-title text-center">{{this.title}}</h5>
        <p class="card-text text-center">Your Goals:{{this.goals}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Your Habit Tracker:
          <form method="POST" action="/user-profile/{{_id}}/tracker-update">
            <input
              type="number"
              name="counter"
              class="btn btn-outline-dark btn"
              value="{{this.counter}}"
            />
            Update your tracker by clicking on:
            <button type="submit" class="btn btn-outline-dark">Save</button>
          </form>
        </li>
      </ul>

      <div class="card-body">
        <a href="/user-profile/{{_id}}/edit" class="card-link">
          <button class="btn btn-outline-dark">Edit</button>
        </a>
        <a href="#" class="card-link">
          <form method="POST" action="/user-profile/{{_id}}/delete">
            <button class="btn btn-outline-dark">Delete</button>
          </form>
        </a>
      </div>
    </div>
  </section>
{{/each}}

{{else}}
 <div class="create-btn-container">
<button type="button" class="btn btn-outline-secondary create-btn"><a href="/habits/create">CREATE YOUR FIRST HABIT HERE</button>
</div>
{{/if}}